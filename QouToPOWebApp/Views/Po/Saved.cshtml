@{
    ViewData["Title"] = "PO Saved";
}

@model string

<div class="text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-auto">
            <div class="card p-5 border-0 shadow mb-3">
                <h2 class="display-2 text-success"><i class="bi bi-check2-circle"></i></h2>
                <p class="fw-bold">Successfully saved</p>
                <p>You can now download the PO file or go to the PO list</p>
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <form asp-controller="Pdf" asp-action="GetFile" method="post">
                            <input name="filePath" id="filePath" value="@Model" hidden />
                            <button class="btn btn-primary" type="submit">Download PO</button>
                        </form>
                    </div>
                    <div class="col-auto">
                        <a class="btn btn-primary" asp-controller="Po" asp-action="Index" asp-route-path="@DateTime.Now.ToString("yyyy\\\\MMMM\\\\d")" >Go to PO list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>